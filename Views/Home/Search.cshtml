<h4>Search</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Home" asp-action="ChoseSearchEngine">
            <div class="form-group">
                <label for="SearchPhase" class="control-label">Search By</label>
                <select name="SearchBy" class="form-control form-select">
                    <option value="player">by Player</option>
                    <option value="team">by Team</option>
                </select>
                <input name="SearchPhase" placeholder="search phase" class="form-control" />
            </div>
            
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

