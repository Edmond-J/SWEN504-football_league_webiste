@model FootballLeagueWebsite.Models.Team

@{
    ViewData["Title"] = "Details";
}
<link href="https://fonts.googleapis.com/css2?family=Cinzel+Decorative&display=swap" rel="stylesheet">
<div class="team-detail-header">
    @if (Model.LogoPath == null) {
            <img height=300px src="@Url.Content("~/resource/Photo-Missing.png")" alt="team logo"/>
    } else {
            <img height=300px src="@Url.Content("~/resource/teams/"+ @Model.LogoPath)" alt="team logo"/>
    }
    <h1 class="team-name">@Model.TeamName</h1>

    <div>
        <h5>Club Information</h5>
        <hr />
        <dl class="row team-overview">
            <dt class = "col-sm-2">
                Name
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.TeamName)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.City)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Coach)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Coach)
            </dd>
        </dl>
    </div>
</div>
<br />
<h5>Team Member Information</h5>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>Player</th>
            <th>Height(cm)</th>
            <th>Age</th>
            <th>Number</th>
            <th>Position</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Players) {
            <tr>
                <td>
                    <a href="@Url.Action("Details", "Players", new { id = item.PlayerId })">
                        @Html.DisplayFor(modelItem => item.PlayerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.TeamId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
